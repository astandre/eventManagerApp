<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andre.eventmanager.AboutAcivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
<TextView
    android:id="@+id/titulo_about"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Acerca de: "
    android:textAppearance="?android:attr/textAppearanceLarge"/>
    <TextView
    android:id="@+id/contenido_about"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/about"
        android:layout_below="@id/titulo_about"/>
        <TextView
            android:id="@+id/tituloVersion_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version"
            android:layout_below="@id/contenido_about"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tituloVersion_about"
        android:text="@string/version"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
