<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/shadowColor"
        android:id="@+id/container_event"
        >

        <ImageView
            android:id="@+id/imagen_event"
            android:layout_width="400dp"
            android:layout_height="200dp"
            />

        <!--<ImageView-->
            <!--android:id="@+id/compartir_event"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--/>-->


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info1"

            android:layout_below="@+id/imagen_event">
            <TextView
                android:id="@+id/fecha_event"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="SAT, MAR 24 AT 9PM"
                android:paddingLeft="5dp"
                android:textColor="@android:color/holo_red_dark"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
            <TextView
                android:id="@+id/nombre_event"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/fecha_event"
                android:text="MC en concierto"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />
            <TextView
                android:id="@+id/local_event"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Lemon trip"
                android:layout_below="@id/nombre_event"
                android:paddingLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/category"
                android:layout_toEndOf="@+id/nombre_event"
                android:layout_below="@+id/fecha_event">
            <ImageView
                android:id="@+id/family_event"
                android:layout_width="35dp"
                android:layout_height="35dp"
                />
                <ImageView
                    android:id="@+id/category1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_toEndOf="@+id/family_event"
                    />
                <ImageView
                    android:id="@+id/category2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_toEndOf="@+id/category1"
                    />
                <ImageView
                    android:id="@+id/category3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_toEndOf="@+id/category2"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/linea_event"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#ffd5d5d5">

        </View>


    </RelativeLayout>
</android.support.v7.widget.CardView>